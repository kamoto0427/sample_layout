.main-information
  -if current_page?("/")
    .main-information__showMypage-contents1
      .main-information__showMypage-contents1__left
        .main-information__showMypage-contents1__left__profile-image
          = image_tag('no-image.png')

      .main-information__showMypage-contents1__right
        .main-information__showMypage-contents1__right__upper
          %h2 nickname
        .main-information__showMypage-contents1__right__lower
          .main-information__showMypage-contents1__right__lower__review
            %ul.showMypage-review-itemsBox
              %li 評価
              %li 4.0
          .main-information__showMypage-contents1__right__lower__items
            %ul.showMypage-review-itemsBox
              %li 出品数
              %li 0

    .main-information__showMypage-contents2
      .main-information__showMypage-contents2__text-field
      .main-information__showMypage-contents2__edit-btn

  - if current_page?(logout_index_path)
    .main-information__logout-btn
      = link_to "ログアウト", "/"

  - if current_page?(pay_index_path)
    .main-information__payTop
      %h2 支払い方法
    .main-information__payMiddle
      %p クレジットカード一覧
      .main-information__payMiddle__credit-AdditionBtn
        .main-information__payMiddle__credit-AdditionBtn__contents
          = icon("far", "credit-card")
          = link_to "クレジットカードを追加する", "#"
